<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageview_device_feature"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/camera_default" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:id="@+id/linearlayout_feature_container_device_feature"
        android:layout_width="@dimen/Android_Design_rhythmThree"
        android:layout_height="@dimen/Android_Design_rhythmThree"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-24dp"
        android:layout_marginLeft="-20dp"
        android:background="@drawable/menu_circle_accent_radius"
        android:orientation="vertical"
        android:padding="@dimen/Android_Design_rhythmThird">

        <ImageView
            android:id="@+id/imageview_menu_device_feature"
            android:layout_width="@dimen/Android_Design_rhythmOneAndAHalf"
            android:layout_height="@dimen/Android_Design_rhythmOneAndAHalf"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_mic" />

        <TextView
            android:id="@+id/textview_tap_device_feature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/tap_to_talk"
            android:textAppearance="@style/App.TextAppearance.MediumWhite" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageview_minimize_device_feature"
        android:layout_width="@dimen/Android_Design_rhythm"
        android:layout_height="@dimen/Android_Design_rhythm"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/Android_Design_rhythmThird"
        android:scaleType="fitXY"
        android:src="@drawable/ic_mini_video" />
</RelativeLayout>
