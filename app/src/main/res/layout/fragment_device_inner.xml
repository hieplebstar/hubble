<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/introduction_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageview_device_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/camera_default_bg" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Replay the last 24 hours"
        android:textAppearance="@style/App.TextAppearance.MediumAccent"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_replay_device_inner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Replay_list_Height" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_device_inner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Android_Design_rhythmSixth">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_timeline_device_inner"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
