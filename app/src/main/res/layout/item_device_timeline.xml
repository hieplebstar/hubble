<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/Android_Design_rhythmSixth"
        android:maxWidth="@dimen/Android_Design_rhythmOneAndAHalf"
        android:text="10:00 am" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/Android_Design_rhythmOneAndAHalf"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/Border_Height"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@color/gray" />

        <View
            android:layout_width="@dimen/Android_Design_rhythmSixth"
            android:layout_height="@dimen/Android_Design_rhythmSixth"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/circle_yellow_radius" />

        <View
            android:layout_width="@dimen/Android_Design_rhythmThird"
            android:layout_height="@dimen/Border_Height"
            android:layout_marginTop="@dimen/Android_Design_rhythmThird"
            android:background="@color/yellow" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/Android_Design_rhythmSixth"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_device_timeline_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:src="@drawable/camera_default_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageview_device_timeline_item"
                android:layout_margin="@dimen/Android_Design_rhythmSixth"
                android:maxWidth="@dimen/Android_Design_rhythmOneAndAHalf"
                android:text="Snapshot"
                android:textAppearance="@style/App.TextAppearance.MediumYellow" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>

